SELECT * FROM exs4;


SELECT UPPER(item_name) FROM exs4;
SELECT INITCAP(item_name) FROM exs4;
SELECT TRIM(BOTH 'e' FROM item_name) FROM exs4;

SELECT ADD_MONTHS('19/1/2021', 3) FROM dual;
SELECT LAST_DAY('14/3/2021') FROM dual;
SELECT TO_CHAR(checkin_date, 'day month yyyy') FROM exs4;
SELECT TO_CHAR(sysdate, 'dd') FROM dual;

SELECT 
    MAX(item_price),
    MIN(item_price),
    ROUND(AVG(item_price), 1),
    SUM(item_price)
FROM exs4;

SELECT MIN(item_name), MAX(item_name) FROM exs4;
SELECT COUNT(place) FROM exs4;

SELECT TO_CHAR(sysdate, 'dd') FROM dual;
SELECT TO_CHAR(sysdate, 'ddth') FROM dual;
SELECT TO_CHAR(sysdate, 'ddspth') FROM dual;

